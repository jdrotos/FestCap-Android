<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.jdrotos.festcap">

    <application
        android:name=".FestCapApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LaunchActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".FestsActivity"
            android:label="@string/festivals"
            android:launchMode="standard" />

        <activity
            android:name=".EditFestActivity"
            android:label="@string/edit_fest"
            android:launchMode="standard" />

        <activity
            android:name=".VenueActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance" />

        <activity
            android:name=".EditVenueActivity"
            android:label="@string/edit_venue"
            android:launchMode="standard" />
    </application>
</manifest>
